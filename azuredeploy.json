            "Create_HTML_table": {
              "inputs": {
                "format": "HTML",
                "from": "@body('Parse_JSON')?['output']"
              },
              "runAfter": {
                "Parse_JSON": [
                  "Succeeded"
                ]
              },
              "type": "Table"
            },
            "Send_an_email": {
              "inputs": {
                "body": {
                  "Body": "@body('Create_HTML_table')",
                  "Subject": "Started VMs",
                  "To": "somebody@example.com"
                },
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['office365']['connectionId']"
                  }
                },
                "method": "post",
                "path": "/Mail"
              },
              "runAfter": {
                "Create_HTML_table": [
                  "Succeeded"
                ]
              },
              "type": "ApiConnection"
            },
            "Enter_Batch_Size_(Optional)": {
              "inputs": {
                "variables": [
                  {
                    "name": "Batch Size",
                    "type": "String",
                    "value": "10"
                  }
                ]
              },
              "runAfter": {
                "Enter_Tags_to_Check_(Optional)": [
                  "Succeeded"
                ]
              },
              "type": "InitializeVariable"
            },
            "Enter_Resource_Group_Name_(Optional)": {
              "inputs": {
                "variables": [
                  {
                    "name": "resourceGroupName",
                    "type": "String",
                    "value": ""
                  }
                ]
              },
              "runAfter": {
                "Enter_SubscriptionId_(Required)": [
                  "Succeeded"
                ]
              },
              "type": "InitializeVariable"
            },
            "Enter_SubscriptionId_(Required)": {
              "description": "Subscription Id of the subscription you want to manage",
