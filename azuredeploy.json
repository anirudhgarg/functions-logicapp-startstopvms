                "variables": [
                  {
                    "name": "subscriptionId",
                    "type": "String",
                    "value": ""
                  }
                ]
              },
              "runAfter": {},
              "type": "InitializeVariable"
            },
            "Enter_Tags_to_Check_(Optional)": {
